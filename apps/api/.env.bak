########################################
# Runtime
########################################
NODE_ENV=production
HOST=0.0.0.0
PORT=3011
LOG_LEVEL=log
TZ=Asia/Karachi

########################################
# Database (Prisma) â€” MySQL
########################################
# Example format: mysql://USER:PASS@127.0.0.1:3306/DBNAME
DATABASE_URL=mysql://__DB_USER__:__DB_PASS__@127.0.0.1:3306/__DB_NAME__

########################################
# Auth (JWT)
########################################
# Generate fresh secrets on the server (e.g. `openssl rand -base64 48`)
JWT_SECRET=__GENERATE_A_NEW_RANDOM_SECRET__
JWT_EXPIRES_IN=7d
# Optional admin key for simple admin endpoints (wire into guards later)
ADMIN_API_KEY=__GENERATE_A_NEW_RANDOM_ADMIN_KEY__

########################################
# CORS
########################################
# Include both apex and www; add staging domains if needed
CORS_ORIGIN=https://filespay.org,https://www.filespay.org
CORS_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,x-revalidate-token,x-admin-key

########################################
# Uploads
########################################
UPLOAD_PROVIDER=local
UPLOAD_DIR=/home/1510120.cloudwaysapps.com/kpvbrsfqas/public_html/uploads
MAX_IMAGE_MB=5
ALLOWED_IMAGE_MIME=image/jpeg,image/png,image/webp,image/gif

########################################
# Frontend cache revalidation
########################################
WEB_REVALIDATE_URL=http://127.0.0.1:3000/api/revalidate
WEB_REVALIDATE_TOKEN=__MATCH_WEB_TOKEN__
