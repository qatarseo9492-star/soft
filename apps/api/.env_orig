########################################
# CORS
########################################
# front-end origin(s)
CORS_ORIGIN=https://filespay.org
CORS_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
# add x-admin-key so browser calls can include it
CORS_HEADERS=Content-Type,Authorization,x-revalidate-token,x-admin-key

########################################
# Uploads
########################################
# Local filesystem uploads
UPLOAD_PROVIDER=local
UPLOAD_DIR=./uploads
MAX_IMAGE_MB=5
ALLOWED_IMAGE_MIME=image/jpeg,image/png,image/webp,image/gif

# If you later switch to S3, set:
# UPLOAD_PROVIDER=s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
S3_BUCKET=

# Optional: simple shared token for editor image endpoint (if you enforce one)
EDITOR_UPLOAD_TOKEN=

########################################
# Frontend cache revalidation
########################################
# Used by SoftwareService.revalidate(...)
# ⬇️ point directly to the Next.js app (port 3010)
WEB_REVALIDATE_URL=http://127.0.0.1:3010/api/revalidate
WEB_REVALIDATE_TOKEN=change-me-to-another-long-random-token

########################################
